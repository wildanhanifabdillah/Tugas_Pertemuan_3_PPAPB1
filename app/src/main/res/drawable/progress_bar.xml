<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape>
            <size android:height="4dp"/>
            <solid android:color="#FFDB00"/>
        </shape>
    </item>

    <!-- Progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size android:height="4dp"/>
                <solid android:color="#FFDB00"/>
            </shape>
        </clip>
    </item>
</layer-list>
